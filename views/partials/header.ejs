    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/static/css/main.css">
    <link rel="stylesheet" href="/static/css/sidebar.css">
    <% if(typeof scripts !== 'undefined') scripts.forEach(function(script) { %>
      <script src="<%=script%>"></script>
    <% }); %>
    <% if(typeof stylesheets !== 'undefined') stylesheets.forEach(function(stylesheet){ %>
      <link rel="stylesheet" type="text/css" href="<%=stylesheet%>">
    <% }); %> 
</head>
<body style="overflow-x: hidden;">
    <nav class="navbar navbar-expand-lg">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <a class="navbar-brand" href="/" style="color: black">Home</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div> <!-- /navbar-header -->
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="nav navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/books" style="color: black">View Books
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <% if(currentUser && admin_user){ %>
                    <li class="nav-item">
                        <a class="nav-link" href="/books/new" style="color: black">Add Books</a>
                    </li>
                <% } %>
                <% if(error && error.length > 0){ %>
                    <li class="nav-item" id="alert-danger">
                        <span class="alert alert-danger" role="alert" style="display: inline-block;position: relative;z-index: 1;padding: 1em;margin: 0em;"><%=error%></span>
                    </li>
                    <script>
                        setTimeout(function(){
                            $("#alert-danger").fadeOut('slow');
                        }, 4000);
                    </script>
                <% } %>
                <% if(success && success.length > 0){ %>
                    <li class="nav-item" id="alert-success">
                        <span class="alert alert-success" role="alert" style="display: inline-block;position: relative;z-index: 1;padding: 1em;margin: 0em;"><%=success%></span>
                    </li>
                    <script>
                        setTimeout(function(){
                            $("#alert-success").fadeOut('slow');
                        }, 4000);
                    </script>
                <% } %>
                <li class="nav-item" id="alert-danger">
                    <span class="alert alert-danger" role="alert" style="display: inline-block;position: relative;z-index: 1;padding: 1em;margin: 0em; display: none;"></span>
                </li>
                <li class="nav-item"  id="alert-success">
                    <span class="alert alert-success" role="alert" style="display: inline-block;position: relative;z-index: 1;padding: 1em;margin: 0em; display: none;"></span>
                </li>
            </ul>       
            <ul class="nav navbar-nav navbar-right">
                <% if(!currentUser){ %>
                    <li class="nav-item">
                        <a class="nav-link" href="/login" style="color: black">Login</a>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" disabled style="color: black">Signed In As <%= currentUser %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout" style="color: black">Logout</a>
                    </li>
                <% } %>
              </ul>
        </div> <!-- /.navbar-collapse -->
    </nav>
    <div class="container-sm">