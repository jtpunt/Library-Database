<%- include ('partials/header') %>
<div class="row">
    <h1 style="text-align: center">Login</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/login" method="post">
            <div class="form-group">
                <input class="form-control" type="email" name="email" placeholder="email" required maxlength="30">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="password" required maxlength="50">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Login</button>
            </div>
        </form>
            <div>
                <a href="/forgot" class="btn btn-default btn-lg"><i class="fa fa-tree"></i> Forgot password?</a>
            </div>
            
    </div>
</div>
<%- include ('partials/footer') %>