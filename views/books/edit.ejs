<%- include ('../partials/header') %>
<div class="container">
<h5>Update for <%=book.title%> </h5>
<form id="update-book" action="/books/<%=book.isbn%>?_method=PUT" method="post">
    <legend>Edit Book Details</legend>
    <div class="form-group">
        <label for="isbn">ISBN-10</label>
        <input type="text" class="form-control" name="isbn" id="isbn" value="<%=book.isbn%>" required>
    </div>
    <div class="form-group">
        <label for="title">Title Name</label>
        <input type="text" class="form-control" name="title" value="<%=book.title%>" required>
    </div>
    <div class="form-group">
        <label for="desc">Description</label>
        <input type="text" class="form-control" name="desc" value="<%=book.description%>" required>
    </div>
    <div class="form-group">
        <label for="pages">Pages</label>
        <input type="number" class="form-control" name="pages" value="<%=book.pages%>" required>
    </div>
    <div class="form-group">
        <label for="img_file_url">Image URL</label>
        <input type="text" class="form-control" name="img_file_url" value="<%=book.img_file_url%>" required>
    </div>
    <button>Update</button>
</form>
</div>
<%- include ('../partials/footer') %>