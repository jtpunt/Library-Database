<%- include ('../partials/header') %>
<div class="row">
	<div class="col-md-9 mx-auto">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Patron Name</th>
					<th scope="col">ISBN</th>
					<th scope="col">Title</th>
					<th scope="col">Date Reserved</th>
					<th scope="col">Remove Hold</th>
				</tr>
			</thead>
			<tbody>
				<% holds.forEach(function(hold){ %>
					<tr>
						<td scope="row"><%= hold.Full_Name %></td>
						<td><%= hold.isbn %></td>
						<td><%= hold.title %></td>
						<td><%= hold.return_date %> -  <%= hold.patron_id %></td>
						<td>
                            <button class="btn btn-warning" onclick="deleteHold('<%= hold.isbn %>', '<%= hold.copy_number%>', '<%= hold.patron_id %>')">Remove Hold <%= hold.patron_id %></button>
						</td>
					</tr>
				<% }); %>
			</tbody>
		</table>

	</div>
</div>
<%- include ('../partials/footer') %>